<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OWCE.Views.DistanceRowView" xmlns:models="clr-namespace:OWCE.Models" xmlns:converters="clr-namespace:OWCE.Converters" x:DataType="models:DistanceBoardDetail">
    <ContentView.Resources>
        <converters:DistanceConverter x:Key="distanceConverter" />
    </ContentView.Resources>
    <StackLayout Orientation="Horizontal" Padding="20">
        <Label Text="{Binding Name}" FontAttributes="Bold" HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
        <Label Text="{Binding Value, Converter={StaticResource distanceConverter}}" HorizontalOptions="End" VerticalOptions="Center" />
    </StackLayout>
</ContentView>
